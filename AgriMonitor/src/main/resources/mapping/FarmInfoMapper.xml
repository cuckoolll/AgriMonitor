<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.agri.monitor.mapper.FarmInfoMapper">
    <select id="findAll" parameterType="map" resultType="map">
        select a.gid,a.county,a.farm_name,a.farm_address,a.legal_person,a.phone_num,b.type_name animals_name,a.animals_size,a.remarks 
        from t_farm_info a,t_animals_type b where a.animals_type=b.gid
        <if test="farmname != null and farmname != ''">
        	<bind name="farm_name" value="'%' + farmname + '%'"/>
	        and a.farm_name like #{farm_name}
	    </if>
	    <if test="type != null and type != ''">
	    	and b.gid=#{type}
	    </if>
	    order by a.create_time desc
    </select>
    
    <insert id="batchInsert" parameterType="java.util.List">
    	insert into t_farm_info(county,towns,village,farm_name,farm_address,legal_person,phone_num,animals_type,animals_size,remarks,creator,modifier)
    	values
    	<foreach collection="list" item="item" index="index" separator=",">
		   (#{item.county},#{item.towns},#{item.village},#{item.farm_name},#{item.farm_address},#{item.legal_person},#{item.phone_num},
		   #{item.animals_type},#{item.animals_size},#{item.remarks},#{item.creator},#{item.modifier})
		</foreach>
    </insert>
</mapper>