<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.agri.monitor.mapper.AnimalsTypeMapper">
    <select id="findById" parameterType="int" resultType="com.agri.monitor.entity.AnimalsType">
		select * from t_animals_type where gid=#{gid}
	</select>
    <select id="findAllForPage" parameterType="com.agri.monitor.vo.AnimalsTypeQueryVO" resultType="map">
        select a.gid,a.type_name,a.create_time,a.creator,a.last_time,a.modifier,a.stopflag,b.user_showname from t_animals_type a, t_user_info b 
        where a.creator=b.user_id
        <if test="stopflag != null">
	        and a.stopflag=#{stopflag}
	    </if>
	    order by a.gid desc limit #{currIndex},#{limit}
    </select>
    <select id="findAllCount" parameterType="com.agri.monitor.vo.AnimalsTypeQueryVO" resultType="int">
        select count(a.gid) from t_animals_type a, t_user_info b where a.creator=b.user_id
         <if test="stopflag != null">
	        and a.stopflag=#{stopflag}
	    </if>
    </select>
    
    <insert id="insert" parameterType="com.agri.monitor.entity.AnimalsType">
    	insert into t_animals_type(type_name,stopflag,modifier,creator)
    	values
	   (#{type_name},#{stopflag},#{modifier},#{creator})
    </insert>
    
    <update id="update" parameterType="com.agri.monitor.entity.AnimalsType">
    	update t_animals_type set type_name=#{type_name},stopflag=#{stopflag},modifier=#{modifier},last_time=#{last_time} where gid=#{gid}
    </update>
    
    <update id="animalstypeQy" parameterType="java.util.List">
    	update t_animals_type set stopflag=1 where gid in
    	<foreach item="item" index="index" collection="list" open="(" separator="," close=")">
    		#{item}
    	</foreach>
    </update>
    
    <update id="animalstypeTy" parameterType="java.util.List">
    	update t_animals_type set stopflag=0 where gid in
    	<foreach item="item" index="index" collection="list" open="(" separator="," close=")">
    		#{item}
    	</foreach>
    </update>
    
    <delete id="delete" parameterType="java.util.List">
    	delete from t_animals_type where gid in
    	<foreach item="item" index="index" collection="list" open="(" separator="," close=")">
    		#{item}
    	</foreach>
    </delete>
</mapper>